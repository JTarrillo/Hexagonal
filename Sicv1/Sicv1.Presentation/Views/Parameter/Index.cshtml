<div class='modal fade' id='modal' role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class='modal-content'>            
            <div class='modal-header'>
                <h5 id="modal-title" class='modal-title'>Agregar Parametro</h5>
            </div>
            <div class='modal-body'>
                <div id="rowCboCompany" class="row">
                    <div class="col-8 ant-form-group">
                        <span>Empresa</span>
                        <select id="cboCompany" class="input cboCompany" autocomplete="none"></select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-8 ant-form-group">
                        <span>Nombre Parametro</span>
                        <input class='input' type='text' autocomplete="none"  id='nombre_parametro' placeholder='Nombre Parametro'
                            required />
                    </div>
                </div>
                <div class="row">
                    <div class='col-12 ant-form-group'>
                        <span>Descripcion</span>
                        <input class='input'  
                        autocomplete="none" type='text'  id='descrip_parametro' placeholder='Descripcion Parametro' 
                            name="descrip_parametro" />
                    </div>
                </div>
               <div class="row">
                    <div class='col-12 ant-form-group'>
                        <span>Valor Parametro</span>
                        <input class='input' type='text' 
                        autocomplete="none"  placeholder='Valor Parametro' 
                        id='valor_parametro'  name="valor_parametro" required />
                    </div>     
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn btn-pink">Cerrar</button>
                <button type="button" id="btn-save-add" class="btn btn-blue">Grabar</button>
            </div>
        </div>
    </div>  
</div>

